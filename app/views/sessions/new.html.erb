<h1>Login</h1>

<%= render 'layouts/notice' %>

<%= form_tag :sessions, action: :create do %>
  <table>
    <tr>
      <td><%= label_tag :username, 'Username' %></td>
      <td><%= text_field_tag :username %></td>
    </tr>
    <tr>
      <td><%= label_tag :password, 'Password' %></td>
      <td><%= password_field_tag :password %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag 'Login' %></td>
    </tr>
  </table>
<% end %>
