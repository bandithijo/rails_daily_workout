<h1>Form Penulis Baru</h1>

<%= render 'layouts/notice' %>

<%= form_for @author do |f| %>
  <table>
    <tr>
      <td><%= f.label :name, 'Nama penulis' %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <% if @author.errors[:name].any? %>
      <tr>
        <td></td>
        <td><mark><%= @author.errors[:name].first %></mark></td>
      </tr>
    <% end %>
    <tr>
      <td><%= f.label :address, 'Alamat penulis' %></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <% if @author.errors[:address].any? %>
      <tr>
        <td></td>
        <td><mark><%= @author.errors[:address].first %></mark></td>
      </tr>
    <% end %>
    <tr>
      <td><%= f.label :old, 'Umur penulis' %></td>
      <td><%= f.text_field :old %></td>
    </tr>
    <% if @author.errors[:old].any? %>
      <tr>
        <td></td>
        <td><mark><%= @author.errors[:old].first %></mark></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td><%= f.submit 'Daftar' %>&nbsp;<%= f.button 'Hapus', type: :reset %></td>
    </tr>
  </table>
<% end %>
