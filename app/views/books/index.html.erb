<h1>Daftar Semua Buku</h1>

<table>
  <tr>
    <th>No.</th>
    <th>Judul</th>
    <th>Penulis</th>
    <th>Deskripsi</th>
    <th>Halaman</th>
    <th>Harga</th>
    <th>Aksi</th>
  </tr>
  <% no = 0 %>
  <% @books.each do |book| %>
    <tr>
      <td><%= no += 1 %></td>
      <td><%= book.title %></td>
      <td><%= book.author.name %></td>
      <td><%= truncate(book.description, length: 45) %></td>
      <td><%= book.page %></td>
      <td><%= book.price %></td>
      <td>
        <%= link_to 'detail', book_path(book) %> |
      </td>
    </tr>
  <% end %>
</table>
